<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bbbbb.com.waiterplease.ServerLoginActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/l_emailField"
            android:layout_above="@+id/sl_passwordField"
            android:layout_centerHorizontal="true"
            android:hint="Email" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/l_passwordField"
            android:hint="Password"
            android:layout_above="@+id/sl_progressBar"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Log In"
            android:id="@+id/l_loginBtn"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorPrimaryWhite"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/fbLoginButton"
            android:background="@drawable/btn_facebook"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sign Up"
                android:id="@+id/l_signupText"
                android:textAlignment="center"
                android:layout_gravity="right"
                android:layout_alignTop="@+id/l_forgotPassword"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Forgot Password"
                android:id="@+id/l_forgotPassword"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="26dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
