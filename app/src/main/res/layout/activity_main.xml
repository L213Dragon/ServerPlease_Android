<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/rlTitle"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Please!"

                android:id="@+id/txtTitle"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SERVER PLEASE!"
                android:id="@+id/m_title"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DISCRETELY PAGES YOUR SERVER"
                android:id="@+id/m_sub_title"
                android:layout_below="@+id/m_title"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:id="@+id/m_imageView"
                android:src="@drawable/img_logo"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_weight="0.5">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="DINING CUSTOMERS"
                android:id="@+id/m_customer_btn"
                android:onClick="goToCustomerSelectTableActivity"
                android:background="@drawable/button_selector"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="WAITER/WAITRESS"
                android:id="@+id/m_waiter_btn"
                android:onClick="goToWaiterSelectTableActivity"
                android:background="@drawable/button_selector"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginRight="66dp"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/m_customer_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="IN NEED OF SERVICE"
                android:id="@+id/m_indeed_servicem_1"
                android:layout_below="@+id/m_customer_btn"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="IMPROVE SERVICE/TIPS"
                android:id="@+id/m_indeed_service2"
                android:allowUndo="false"
                android:layout_below="@+id/m_waiter_btn"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/exit_imageView"
                android:src="@drawable/logout"
                android:layout_below="@+id/m_indeed_service2"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"
                android:onClick="exitButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Shut Down"
                android:id="@+id/textView5"
                android:layout_below="@+id/exit_imageView"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
